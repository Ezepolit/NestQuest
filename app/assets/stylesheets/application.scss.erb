
/*Import Sass files here*/

@import "bootstrap-sprockets";
@import "bootstrap";

body{
  margin-bottom: 0;
  height: 100vh;
  background-size: contain;
  background: url(<%=image_url("nestquest.jpg")%>) no-repeat fixed;
}

.home > nav{
  background: none;
  padding-top: 15px;
  padding-bottom: 15px;
  border: none;
  .navbar-brand{
    font-size: 30px;
  }
  .navbar-form{
    display: none;
  }
}


.jumbotron {
  background: none;
}

.cta{
  @extend .col-md-6;
  @extend .col-lg-6;
  @extend .col-md-push-3;
  padding-top: 6rem;
  font-size: 40px;
  text-align: center;
  font-weight: 100;
 
}
.cta-search{
  background: rgba(255, 255, 255, 0.5);
  + span {
    > .btn-default {
      background: rgba(255, 255, 255, 0.5);
    }
  }
}

.btn-cta{
  @extend .btn-default;
  font-size: 20px;
  color: white;
  background: none;
  &:hover, &:focus {
      background: none;

    text-decoration: underline;
    color: white;

  }

}


footer {
  position: absolute;
  bottom: 0;
  right: 12rem;
  padding-top: 40px;
  padding-bottom: 40px;
  margin-top: 100px;
  color: #777;
	background: transparent;
  a {
    color: white;
    text-decoration: underline;
    font-weight: 100;

  }
}

.index-thumbnail {
	min-height: 200px;
	max-height: 200px;
	width: 300px;
	border-style: solid transparent;
	border-width: 5px;
	border-radius: 100%;
}


.group{
  display: inline-block;
  padding: 10px;
  padding-left: 13px;
  div{
    padding: 10px;
    border: 2px solid gray;
    display: inline-block;}
  .one{
    border-top-left-radius: 10px;
    border-bottom-left-radius: 10px;}
  .two{
    margin: 0 -5px;}
  .three{
    border-top-right-radius: 10px;
    border-bottom-right-radius: 10px;}
  }

.form-control.searchbar{
  width: 21em;
}

.middle{
  margin-bottom: 15px;
  h3 {
    margin-top: 0;
  }
}
