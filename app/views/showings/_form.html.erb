  <% end %>

  <div class="well" style="max-width:540px;margin:auto;">
  
  <div class="field">
    <%= f.label :Tour_Date %><br>
    <%= f.date_select :date %>
  </div>
  <div class="field">
    <%= f.label :Tour_Time %><br>
    <%= f.time_select :time %>
  </div>
  <div class="field">
    <%= f.label :duration %><br>
    <%= f.number_field :duration %>
  </div>
  <div class="field">
    <%= f.label :location %><br>
    <%= f.text_field :location %>
  </div>
  <div class="field">
    <%= f.label :geocoverage%><br>
    <%= f.text_field :geocoverage%>
  </div>
  <div class="field">
    <%= f.label :details %><br>
    <%= f.text_area :details %>
  </div>
  <div class="field">
    <%= f.label :Found_Nest_Bonus %><br>
    <%= f.text_area :Found_Nest_Bonus %>
  </div>
  

