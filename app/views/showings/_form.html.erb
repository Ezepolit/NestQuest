    <%= f.label :bedroom %><br>
    <%= f.select :bedroom, options_for_select(["Any Beds", "Studio only", "Studio / 1 br","1 bedroom","2 bedrooms","3 bedrooms","4 bedrooms"]) %>

  <div class="shrink_wrapped" id="beds_op_container" style="display: none;">  
    <input type="checkbox" name="beds_op" value=">=" se:behavior="field_hideable" se:hide_on_values=",<1, <=1" se:toggle_controller_selector="form#form select[name='beds']" se:element_to_toggle_selector="#beds_op_container" id="beds_or_more_checkbox">
    <label class="secondary" for="beds_or_more_checkbox" style="font-weight: normal;">or more</label>
  </div><br>
  <div id="baths" class="criteria-field baths">
  <label for="baths">Bathrooms</label><br>
  <select name="baths" id="baths">
    <option value="">Any Baths</option>
<option value=">=1">1 or more</option>
<option value=">=1.5">1.5 or more</option>
<option value=">=2">2 or more</option>
<option value=">=2.5">2.5 or more</option>
<option value=">=3">3 or more</option>
<option value=">=3.5">3.5 or more</option>
<option value=">=4">4 or more</option>
  </select>
</div>
<div id="price" class="criteria-field price rental">
  <label for="price_from"> Price </label>
  <div id="monthly_price" style="">
    <div id="price_from_container" class="">
<%= f.select :lower_price_range, options_for_select(["$500","$750","$1,000","$1,250","$1,500","$1,750","$2,000","$2,250","$2,500","$2,750","$3,000","$3,500","$4,000","$4,500","$5,000","$6,000","$7,000","$8,000","$9,000","$10,000"])%>
    
