        <input type="text" id="price_to_ignore" name="price_to_ignore" value="$0" se:behavior="comma_separatable">
      </div>
      <h4> Showing Image (optional) </h4>
  <%= f.file_field :image %>
    </div> 
  </div>
</div>

<h4> Select Apartments to Include </h4>
<select id="showing_apartment_ids" multiple="multiple" name="showing[apartment_ids][]">
    <%= f.collection_select(:apartment_ids, current_broker.apartments.all, :id, :title, {}, {multiple: true}) %>


  <div class="actions">
    <%= f.submit %>
  </div>
</div>

