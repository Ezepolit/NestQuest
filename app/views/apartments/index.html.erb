


<h1>Listing apartments</h1>
<%= image_tag 'images.jpg' %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Neighborhood</th>
      <th>Price</th>
      <th>Bedrooms</th>
      <th>Bathrooms</th>
      <th>Description</th>
      <th>Move date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apartments.each do |apartment| %>
      <tr>
        <td><%= image_tag apartment.image %></td>
        <td><%= apartment.title %></td>
        <td><%= apartment.neighborhood %></td>
        <td><%= apartment.price %></td>
        <td><%= apartment.bedrooms %></td>
        <td><%= apartment.bathrooms %></td>
        <td><%= apartment.description %></td>
        <td><%= apartment.move_date %></td>
        <td><%= link_to 'Show', apartment %></td>
        <td><%= link_to 'Edit', edit_apartment_path(apartment) %></td>
        <td><%= link_to 'Destroy', apartment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Apartment', new_apartment_path %>
